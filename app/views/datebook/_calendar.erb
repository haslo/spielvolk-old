<div id="calendar">
<% calendar_for(all_event_instances, :first_day_of_week => 1) do |t| %>
  <%= t.head(*get_all_weekdays) %>
  <% t.day(:day_method => :date) do |day, event_instances| %>
    <%= day.day %>
    <% unless event_instances.empty? %>
    <br />
      <% event_instances.each do |event_instance| %>
        <%= render :partial => "event_link", :locals => { :event_instance => event_instance } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
</div>
<%= I18n.t 'paragraphs.login' %>
<% form_tag :action => "login" do %>
  <label for="username_or_email"><%= I18n.t 'labels.username_or_email' %>:</label>
  <%= text_field_tag "username_or_email" %><br />
  <label for="password"><%= I18n.t 'labels.password' %>:</label>
  <%= password_field_tag "password" %><br />
  <%= submit_tag I18n.t('buttons.login') %>
<% end %>
